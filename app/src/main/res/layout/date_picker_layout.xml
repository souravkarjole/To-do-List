<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="30dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background_layout_time">

    <CalendarView
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/time_picker_style"
        android:headerBackground="@drawable/time_picker_header_background" />

    <LinearLayout
        android:id="@+id/setTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clock"
            android:layout_gravity="start|center"/>

        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:fontFamily="@font/andika"
            android:text="Time"
            android:textColor="#494848"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/getTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/andika"
            android:textColor="#808080"
            android:text="No"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d3d3d3"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:id="@+id/setRepeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/repeat"
            android:layout_gravity="start|center"/>

        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:backgroundTint="#808080"
            android:fontFamily="@font/andika"
            android:text="Repeat"
            android:textColor="#494848"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/getRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/andika"
            android:textColor="#808080"
            android:text="No"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#d3d3d3"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:gravity="center"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CANCEL"
            android:textStyle="bold"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:textColor="@color/app_color_medium"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DONE"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center"
            android:letterSpacing="0.04"
            android:fontFamily="@font/roboto"
            android:textColor="@color/app_color_medium"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
