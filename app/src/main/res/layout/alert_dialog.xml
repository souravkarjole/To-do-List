<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/alert_dialog_box"
    android:backgroundTint="#D7D1E4">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto"
            android:gravity="start"
            android:text="Delete tasks"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All your alarms, including any future scheduled tasks, will be deleted."
            android:layout_marginTop="6dp"
            android:textColor="#5E5E5E"
            android:fontFamily="@font/roboto"
            android:textSize="16.5sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:gravity="center"
            android:padding="7dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="CANCEL"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:layout_marginEnd="13dp"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:textColor="@color/app_color_medium"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DELETE"
                android:textStyle="bold"
                android:gravity="center"
                android:letterSpacing="0.04"
                android:fontFamily="@font/roboto"
                android:textColor="@color/app_color_medium"
                android:textSize="13sp"/>
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>